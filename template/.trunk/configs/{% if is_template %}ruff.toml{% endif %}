# B     = flake8-bugbear
# C     = Pylint convention rules
# D     = pydocstyle
# DOC   = pydoclint
# E & W = pycodestyle
# F     = pyflakes
# I     = isort
# N     = pep8-naming
# UP    = pyupgrade
# S     = flake8-bandit
select = ["B", "C", "D", "DOC", "E", "F", "I", "N", "S", "UP", "W"]

# Never enforce `E501` (line length violations). This should be handled by formatters.
ignore = ["E501"]
